<Page>
	<PageName>Smart Search</PageName>
	<Menus>
		<Menu>Video Title Bar</Menu>
		<Menu>Disconnect</Menu>
	</Menus>
	<Blocks>
		<Block>
			<Width>200</Width>
			<Dock>left</Dock>
			<BackgroundColor>#626262</BackgroundColor>
			<AutoScroll>false</AutoScroll>
			<Controls>
				<Control>
					<Name>Device</Name>
					<Assembly>DeviceTree.dll</Assembly>
					<ClassName>DeviceTree.DeviceTree</ClassName>
					<Height>auto</Height>
					<BackgroundColor>Transparent</BackgroundColor>
				</Control>
			</Controls>
		</Block>
		<Block>
			<Width>auto</Width>
			<BackgroundColor>White</BackgroundColor>
			<AutoScroll>false</AutoScroll>
			<Controls>
				<Control>
					<Name>Smart Search</Name>
					<Assembly>SmartSearch.dll</Assembly>
					<ClassName>SmartSearch.SmartSearch</ClassName>
					<Height>360</Height>
					<BackgroundColor>Transparent</BackgroundColor>
				</Control>
				<Control>
					<Name>Search Result</Name>
					<Assembly>SmartSearch.dll</Assembly>
					<ClassName>SmartSearch.SearchResult</ClassName>
					<Height>auto</Height>
					<BackgroundColor>Transparent</BackgroundColor>
				</Control>
				<Control>
					<Name>TimeTrack</Name>
					<Assembly>TimeTrack.dll</Assembly>
					<ClassName>TimeTrack.TimeTrack</ClassName>
					<Height>103</Height>
					<BackgroundColor>Transparent</BackgroundColor>
				</Control>
			</Controls>
		</Block>
	</Blocks>
	<Functions>
		<Function>
			<Name>Print Image</Name>
			<Assembly>TimeTrack.dll</Assembly>
			<ClassName>TimeTrack.PrintImage</ClassName>
		</Function>
		<Function>
			<Name>Export Video</Name>
			<Assembly>TimeTrack.dll</Assembly>
			<ClassName>TimeTrack.ExportVideo</ClassName>
		</Function>
	</Functions>
	<Initialize>
		<Control name="TimeTrack">SetSmartSearchProperty</Control>
	</Initialize>
	<Behaviors>
		<Behavior>
			<Trigger name="Video Title Bar">Click</Trigger>
			<Receiver name="Smart Search">VideoTitleBar</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Disconnect">Click</Trigger>
			<Receiver name="Smart Search">Disconnect</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnTitleBarVisibleChange</Trigger>
			<Receiver name="Video Title Bar">TitleBarVisibleChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Device">OnDeviceDoubleClick</Trigger>
			<Receiver name="Smart Search">AppendDevice</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Device">OnGroupDoubleClick</Trigger>
			<Receiver name="Smart Search">ShowGroup</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Device">OnNVRDoubleClick</Trigger>
			<Receiver name="Smart Search">ShowNVR</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnSmartSearchResult</Trigger>
			<Receiver name="Search Result">SmartSearchResult</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnSmartSearchComplete</Trigger>
			<Receiver name="Search Result">SmartSearchComplete</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnContentChange</Trigger>
			<Receiver name="Search Result">ContentChange</Receiver>
			<Receiver name="TimeTrack">ContentChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnSearchStart</Trigger>
			<Receiver name="Search Result">SearchStart</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnTimecodeChange</Trigger>
			<Receiver name="TimeTrack">TimecodeChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Search Result">OnTimecodeChange</Trigger>
			<Receiver name="TimeTrack">GoTo</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnSearchStartDateTimeChange</Trigger>
			<Receiver name="TimeTrack">SearchStartDateTimeChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Smart Search">OnSearchEndDateTimeChange</Trigger>
			<Receiver name="TimeTrack">SearchEndDateTimeChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnContentChange</Trigger>
			<Receiver name="Smart Search">ContentChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnPlay</Trigger>
			<Receiver name="Smart Search">Playback</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnTimecodeChange</Trigger>
			<Receiver name="Smart Search">GoTo</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnTimeUnitChange</Trigger>
			<Receiver name="Smart Search">TimeUnitChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnExportStartDateTimeChange</Trigger>
			<Receiver name="Smart Search">ExportStartDateTimeChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnExportEndDateTimeChange</Trigger>
			<Receiver name="Smart Search">ExportEndDateTimeChange</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnNextFrame</Trigger>
			<Receiver name="Smart Search">NextFrame</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="TimeTrack">OnPreviousFrame</Trigger>
			<Receiver name="Smart Search">PreviousFrame</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Export Video">OnExportVideo</Trigger>
			<Receiver name="TimeTrack">ExportVideo</Receiver>
		</Behavior>
		<Behavior>
			<Trigger name="Print Image">OnPrintImage</Trigger>
			<Receiver name="Smart Search">PrintImage</Receiver>
		</Behavior>
	</Behaviors>
</Page>