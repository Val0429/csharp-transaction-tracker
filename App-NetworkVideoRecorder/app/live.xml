      <ClassName>VideoMonitor.Broadcast</ClassName>
    </Function>
	</Functions>
	<Blocks>
		<Block>
			<Width>220</Width>
			<Dock>left</Dock>
			<Dockable>true</Dockable>
			<Controls>
				<Control>
					<Name>DeviceView</Name>
					<Assembly>DeviceTree.dll</Assembly>
					<ClassName>DeviceTree.DeviceView</ClassName>
					<Height>auto</Height>
				</Control>
				<Control>
					<Name>DeviceList</Name>
					<Assembly>DeviceTree.dll</Assembly>
					<ClassName>DeviceTree.DeviceList</ClassName>
					<Height>auto</Height>
				</Control>
				<Control>
					<Name>Event</Name>
					<Assembly>EventPanel.dll</Assembly>
					<ClassName>EventPanel.EventPanel</ClassName>
					<Height>auto</Height>
				</Control>
				<Control>
					<Name>PTZ</Name>
					<Assembly>PTZPanel.dll</Assembly>
					<ClassName>PTZPanel.PTZPanel</ClassName>
					<Height>auto</Height>
				</Control>
			</Controls>
		</Block>
		<Block>
			<Width>auto</Width>
			<Controls>
				<Control>
					<Name>Monitor</Name>
					<Assembly>VideoMonitor.dll</Assembly>
					<ClassName>VideoMonitor.VideoMonitor</ClassName>
					<Height>auto</Height>
				</Control>
			</Controls>
		</Block>
	</Blocks>
