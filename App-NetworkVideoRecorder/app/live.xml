		<Menu>Auto Drop Frame</Menu>
		<Menu>Decode I-frame</Menu>
		<Menu>Disconnect All</Menu>
	</Menus>
	<Functions>
		<Width>70</Width>
		<Height>265</Height>
		<Dock>left</Dock>
		<Function>
			<Name>Manual Record</Name>
			<Assembly>VideoMonitor.dll</Assembly>
			<ClassName>VideoMonitor.ManualRecord</ClassName>
		</Function>
		<Function>
